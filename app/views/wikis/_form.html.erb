
<%= form_for wiki do |f| %>
  <% if wiki.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(wiki.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki title" %>
  <% end %>
  <%= form_group_tag(wiki.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Wiki body" %>
  <% end %>
  <% if current_user.premium? || current_user.admin? %>
    <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private Wiki
      <% end %>
    </div>
  <% end %>
  <% if wiki.private? %>
    <table>
      <% @users.each do |user| %>
        <tr>
          <td><h5><%= user.email %></h5></td>
          <td>
            <% if wiki.collaborators.include?(user) %>
              <%= button_to "Remove Collaborator", class: 'btn btn-danger', method: :delete %>
            <% else %>
              <%= button_to "Add Collaborator", wiki_collaborators_path(wiki, user), class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <div class="form-group">
    <br>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
